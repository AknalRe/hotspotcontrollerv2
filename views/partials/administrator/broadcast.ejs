<div class="broadcastpage">
    <div class="form-broadcast-container">
        <h5>Broadcast</h5>
        <form id="broadcastForm" action="/broadcast" method="POST">
            <div class="form-group">
                <div class="form-group">
                    <label for="tujuan">Tujuan Broadcast:</label>
                    <select class="form-control" id="tujuan" name="tujuan" required>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="pesan">Pesan:</label>
                <textarea class="form-control" id="pesan" name="pesan" rows="5" required></textarea>
            </div>
            <div class="form-group">
                <label for="gambar">Nama:</label>
                <input type="text" class="form-control" id="gambar" name="gambar" required>
            </div>
            <br>
            <div class="btn-generate-qr">
                <button id="submitButton" type="submit" class="btn btn-primary">Kirim Broadcast</button>
                <div id="loadingSpinner" class="spinner-border text-light" role="status" style="display: none;">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </form>
    </div>
</div>