                row.appendChild(altCell);
                row.appendChild(linkCell);
                row.appendChild(imgCell);
                row.appendChild(actionCell);
                tbody.appendChild(row);
            } else {
                toastToast(false, "", `Data dengan ID ${item.id} tidak unik`);
            }
        });
