<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="https://merch.mikrotik.com/cdn/shop/files/512.png">
    <title><%= name_page %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/tamu.css">
</head>
<body>

    <div class="ie-fixMinHeight">
        <div class="main">
            <div class="wrap animated fadeIn">
                <img class="logo" src="https://www.claricebeauty.co.id/wp-content/uploads/2021/03/logo-png.png" alt="clarice_logo.jpg">
                <div class="content-form">
                    <form id="tambahAkunForm" action="/tambahakunhotspot" method="POST">

                        <div class="info" id="info">Isikan data diri anda dengan lengkap dan sesuai dengan form di bawah</div>
                        <div class="notice" id="err" style="display: none;"></div>

                        <div class="centerform">
                            <label for="nomor">Nomor HP:</label>
                            <input id="nomor" name="nomor" type="text" placeholder="Isi dengan nomor hp" required />
                        </div>
                        <input type="submit" value="Simpan" />
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Mendapatkan URL path
            const path = window.location.pathname;
            // Memecah path menjadi bagian-bagian
            const pathParts = path.split('/');
            // Mendapatkan parameter terakhir
            const authParam = pathParts[pathParts.length - 1];
            
            console.log('Auth parameter:', authParam);
            document.getElementById('tambahAkunForm').addEventListener('submit', function (event) {
                event.preventDefault();
                const nomor = document.getElementById('nomor').value;
                const phonePattern = /^0[0-9]{9,14}$/;
                
                if (!nomor) {
                    document.getElementById('err').style.display = 'block';
                    document.getElementById('err').innerText = "Silakan mengisikan nomor akun";
                    return;
                }

                if (!phonePattern.test(nomor)) {
                    document.getElementById('err').style.display = 'block';
                    document.getElementById('err').innerText = "Nomor HP tidak valid. Pastikan berisi angka dan panjangnya 10-15 digit.";
                    return;
                }

                const formData = {
                    username: nomor,
                    authlogin: authParam
                };

                fetch('/tambahakuntamu', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                })
                .then(response => response.json())
                .then(data => {
                    const errDiv = document.getElementById('err');
                    errDiv.style.display = 'block';
                    errDiv.innerText = data.message;
                    if (data.success) {
                        document.getElementById('nomor').value = '';
                    }
                })
                .catch(error => {
                    console.log('Error:', error);
                    const errDiv = document.getElementById('err');
                    errDiv.style.display = 'block';
                    errDiv.innerText = 'Terjadi kesalahan. Silakan coba lagi.';
                });
            });
        });
    </script>
    
</body>
</html>
